<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inshow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8" >
    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/debug00"
        style="@style/label_text_row"
        inshow:labelValueColor="@color/black_50_transparent"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="当前版本"
        />
    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/stepAdjust"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="步针调试"
        />
    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/debug01"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="指针调试"
        />

    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/debug02"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="清空用户数据"
        />
    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/debug03"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="手表日志"
        />
    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/debug04"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="写入计步数据"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.inshow.watch.android.view.LabelTextRow
        style="@style/label_text_row"
        inshow:labelArrows="false"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="手表本地时间"
        />
        <CheckBox
            android:id="@+id/switchButton1"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:button="@drawable/watch_select_switch_black"
            android:layout_marginLeft="@dimen/std_titlebar_margin_left_right"
            android:checked="false"
            android:focusable="false" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.inshow.watch.android.view.LabelTextRow
        style="@style/label_text_row"
        inshow:labelArrows="false"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="关闭蓝牙安全认证"
        />
        <CheckBox
            android:id="@+id/switchButton2"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:button="@drawable/watch_select_switch_black"
            android:layout_marginLeft="@dimen/std_titlebar_margin_left_right"
            android:checked="false"
            android:focusable="false" />
    </FrameLayout>

    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/debug05"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="电池采样"
        />
    <com.inshow.watch.android.view.LabelTextRow
        android:id="@+id/adjust"
        style="@style/label_text_row"
        inshow:labelArrows="true"
        inshow:labelDividerIndent="24dp"
        inshow:labelText="校准方案"
        />
</LinearLayout>