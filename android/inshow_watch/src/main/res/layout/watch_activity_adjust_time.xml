<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/watch_gray"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:paddingTop="15dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_is_time"
        android:textColor="@color/black_80_transparent"
        android:textSize="20sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.inshow.watch.android.view.LineOnePicker
            android:id="@+id/timeHourPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/watch_pick_hour"
            android:focusable="false"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:focusableInTouchMode="false" />

        <com.inshow.watch.android.view.LineOnePicker
            android:id="@+id/timeMinPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/watch_picker_minute"
            android:focusable="false"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:focusableInTouchMode="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_btn_left"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:textColor="@color/black_60_transparent"
            android:text="@string/last_step"
            android:textSize="@dimen/font_size_12sp"
            android:id="@+id/left" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_btn_right"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:textColor="@color/black_60_transparent"
            android:text="@string/adjust_sure"
            android:textSize="@dimen/font_size_12sp"
            android:id="@+id/ok" />
    </LinearLayout>
</LinearLayout>