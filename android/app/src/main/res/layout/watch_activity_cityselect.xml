<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inshow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.inso.plugin.view.SearchClearEditView
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/common_input_bg"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="@string/search_city"
            android:minHeight="35dip"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/dialog_sub_title_txt_color"
            android:textColorHint="@color/black_30_transparent"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/font_size_5" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_10_transparent" />

    <FrameLayout
        android:id="@+id/fl_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.inso.plugin.view.indexable.IndexableLayout
            android:id="@+id/indexableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            inshow:indexBar_background="@color/white"
            inshow:indexBar_layout_width="24dp"
            inshow:indexBar_selectedTextColor="@color/primaryColor"
            inshow:indexBar_textColor="@color/black_50_transparent"
            inshow:indexBar_textSpace="8dp" />

        <FrameLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <ProgressBar
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/city_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<fragment-->
            <!--android:id="@+id/city_search_fragment"-->
            <!--class="com.inshow.watch.android.fragment.CitySearchFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
    </FrameLayout>
</LinearLayout>