<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/act_base_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
      >
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/select_all_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/mi_title_color">
        <Button
            android:id="@+id/select_all_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/watch_std_button_normal_selector"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="@string/button_cancel"
            android:textColor="@color/watch_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/select_all_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/titlebar_return_area_size"
            android:layout_marginRight="@dimen/titlebar_return_area_size"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/title_bar_text_size" />

        <Button
            android:id="@+id/select_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/watch_std_button_important_selector"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="@string/watch_select_all"
            android:textColor="@color/primaryColor"
            android:textSize="12sp" />

    </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_base_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>