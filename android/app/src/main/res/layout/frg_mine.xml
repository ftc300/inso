<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/VerticalWeightOne"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userIconLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/label_main_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/content_padding">

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/head_default" />

            <TextView
                android:id="@+id/userName"
                style="@style/label_main_15sp"
                android:layout_width="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="小橙子" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="@dimen/content_padding" />


        <com.inso.watch.baselib.wigets.LabelTextRow
            android:id="@+id/mine_setting"
            style="@style/label_row"
            app:labelArrows="true"
            app:labelDividerIndent="@dimen/content_padding"
            app:labelText="通知设置" />

        <com.inso.watch.baselib.wigets.LabelTextRow
            android:id="@+id/mine_feedback"
            style="@style/label_row"
            app:labelArrows="true"
            app:labelDividerIndent="@dimen/content_padding"
            app:labelText="反馈" />

        <com.inso.watch.baselib.wigets.LabelTextRow
            android:id="@+id/mine_about"
            style="@style/label_row"
            app:labelArrows="true"
            app:labelText="关于" />

        <com.inso.watch.baselib.wigets.LabelTextRow
            android:id="@+id/mine_logout"
            style="@style/label_row"
            android:layout_marginTop="@dimen/dp13"
            app:labelArrows="true"
            app:labelDividerIndent="@dimen/content_padding"
            app:labelText="注销"
            app:labelTextColor="@color/inso_red" />
    </LinearLayout>


</LinearLayout>
