<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="content_text_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dialog_sub_title_txt_color_sel</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="state_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- 对话框的样式 -->
    <style name="float_base">
        <item name="android:windowBackground">@android:color/darker_gray</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- action-sheet 底部弹出菜单的样式 -->
    <style name="action_sheet" parent="@style/float_base"></style>

    <!-- Base style for animations.  This style specifies no animations. -->
    <style name="Animation" />

    <style name="action_sheet_animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/action_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_exit</item>
    </style>

    <!-- 水平线样式 -->
    <style name="jx_horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/jx_divider</item>
    </style>

</resources>