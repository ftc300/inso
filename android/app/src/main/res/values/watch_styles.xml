<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_text_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/watch_select_lv_item</item>
    </style>

    <!-- 主名称文本相关样式 -->
    <style name="edit_main_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_80_transparent</item>
        <item name="android:textColorHint">@color/black_10_transparent</item>
        <item name="android:drawablePadding">@dimen/bar_padding</item>
    </style>

    <style name="edit_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_80_transparent</item>
        <item name="android:drawablePadding">@dimen/bar_padding</item>
    </style>

    <style name="text_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="Widget.GifView" parent="@android:style/Widget"/>
</resources>