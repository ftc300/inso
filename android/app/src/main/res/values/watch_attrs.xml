<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelTextRow">
        <attr name="labelIcon" format="reference"/>
        <attr name="labelScaleIcon" format="reference"/>
        <attr name="labelText" format="string"/>
        <attr name="labelValue" format="string"/>
        <attr name="labelTopDivider" format="boolean"/>
        <attr name="labelBottomDivider" format="boolean"/>
        <attr name="labelArrows" format="boolean"/>
        <attr name="labelValueRight" format="boolean"/>
        <attr name="labelHint" format="string"/>
        <attr name="labelValueColor" format="color"/>
        <attr name="labelTextColor" format="color"/>
        <attr name="labelHintColor" format="color"/>
        <attr name="labelExactlyWidth" format="dimension"/>
        <attr name="labelTextSize" format="dimension"/>
        <attr name="labelValueSize" format="dimension" />
        <attr name="labelDividerIndent" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LabelEditRow">
        <attr name="labelUnit" format="string"/>
        <attr name="labelUnitColor" format="color"/>
        <attr name="labelPasswordMode" format="boolean"/>
        <attr name="labelPwdCheck" format="boolean"/>
        <attr name="labelEditEnable" format="boolean"/>
        <attr name="android:inputType"/>
        <attr name="android:maxLength"/>
    </declare-styleable>

    <declare-styleable name="ScaleView">
        <attr name="scale_ratio" format="float"></attr>
    </declare-styleable>

    <declare-styleable name="IndexableRecyclerView">
        <attr name="indexBar_selectedTextColor" format="color" />
        <attr name="indexBar_textColor" format="color" />
        <attr name="indexBar_textSize" format="dimension" />
        <attr name="indexBar_textSpace" format="dimension" />
        <attr name="indexBar_background" format="reference|color" />
        <attr name="indexBar_layout_width" format="dimension">
            <!--<enum name="wrap_content" value="-2" /> 暂不支持 -->
        </attr>
    </declare-styleable>

    <declare-styleable name="SearchClearEditView">
        <attr name="clearButtonMode">
            <enum name="never" value="0" />
            <enum name="always" value="1" />
            <enum name="whileEditing" value="2" />
            <enum name="unlessEditing" value="3" />
        </attr>
        <attr name="clearButtonDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomItem">
        <attr name="labelTitleText" format="reference|string" />
        <attr name="labelColor" format="reference|color" />
        <attr name="labelSize" format="dimension" />
        <attr name="contentText" format="reference|string" />
        <attr name="contentColor" format="reference|color" />
        <attr name="contentSize" format="dimension" />
        <attr name="drawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="MiClockView">
        <attr name="backgroundColor" format="color" />
        <attr name="lightColor" format="color" />
        <attr name="darkColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="name" format="string"/>
        <attr name="percentDecimal" format="integer"/>
        <attr name="pietextSize" format="dimension"/>
    </declare-styleable>

</resources>